{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [ "Harmony.Extensions/*.csproj" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "xref": [
      "xrefs/Newtonsoft.Json-xrefmap.yml",
      "https://harmony.pardeike.net/xrefmap.yml"
    ],
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "langwordMapping.yml",
          "images/**"
        ]
      },
      {
        "src": "../",
        "files": [ "resources/**" ]
      }
    ],
    "overwrite": [ ],
    "dest": "_site",
    "globalMetadata": {
      "_enableSearch": "true",
      "_appTitle": "Harmony.Extensions Documentation",
      "_appFooter": "Â© 2020 BUTR",
    },
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "_template/dark-theme",
      "_template/last-modified"
    ],
    "postProcessors": ["ExtractSearchIndex", "LastModifiedPostProcessor"],
    "markdownEngineName": "markdig"
  }
}
