<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- We should have a target file that sets HARMONYEXTENSIONS_2_0_4 depending on the Lib.Harmony package version installed-->
    <HarmonyVersion>2.0.4</HarmonyVersion>
    <TargetFrameworks>net45;netstandard2.0</TargetFrameworks>
    <LangVersion>9.0</LangVersion>
    <Nullable>enable</Nullable>
    <RootNamespace>System.Diagnostics.CodeAnalysis</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>$(DefineConstants);HARMONYEXTENSIONS_ENABLEWARNINGS;</DefineConstants>
    <DefineConstants Condition="$(HarmonyVersion) &gt;= '2.0.4'">$(DefineConstants);HARMONYEXTENSIONS_2_0_4;</DefineConstants>
    <NoWarn>$(NoWarn);NU1701</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Lib.Harmony" Version="$(HarmonyVersion)" />
    <PackageReference Include="Nullable" Version="1.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
